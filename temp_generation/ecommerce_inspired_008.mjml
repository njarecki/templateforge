        <mj-image src="https://placehold.co/160x55/png?text=Logo" alt="Store logo" width="160px" align="center" />
      </mj-column>
    </mj-section>
    <mj-section background-color="#fff5f5" padding="40px 25px">
      <mj-column>
        <mj-text font-size="16px" color="#e53e3e" align="center" text-transform="uppercase" letter-spacing="3px">Final Markdown</mj-text>
