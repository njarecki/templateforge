    </mj-section>
    <mj-section background-color="#ffffff" padding="40px 25px 20px">
      <mj-column>
        <mj-text font-size="22px" font-weight="bold" align="center">Top Clearance Picks</mj-text>
      </mj-column>
    </mj-section>
    <mj-section background-color="#ffffff" padding="20px 25px">
      <mj-column width="25%" css-class="mobile-stack">
        <mj-image src="https://placehold.co/130x160/png?text=Item1" alt="Clearance item one" />
        <mj-text font-size="12px" align="center" padding-top="10px">Summer Top</mj-text>
        <mj-text font-size="12px" align="center"><s style="color: #999;">$45</s> <strong style="color: #e53e3e;">$13</strong></mj-text>
      </mj-column>
