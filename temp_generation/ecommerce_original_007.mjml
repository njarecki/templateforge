<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all font-family="{brandFont}" />
      <mj-text font-size="15px" color="{brandText}" line-height="1.6" />
      <mj-button background-color="{brandPrimary}" color="#ffffff" font-size="14px" border-radius="6px" />
    </mj-attributes>
    <mj-style>
      @media only screen and (max-width: 480px) {
        .mobile-hide { display: none !important; }
        .mobile-full { width: 100% !important; }
      }
    </mj-style>
  </mj-head>
  <mj-body background-color="{brandBG}" width="640px">
    <mj-section background-color="#ffffff" padding="15px 20px">
      <mj-column width="40%">
        <mj-image src="https://placehold.co/130x40/png?text=Logo" alt="Store Logo" width="130px" align="left" />
      </mj-column>
      <mj-column width="60%">
        <mj-text align="right" font-size="13px">
          <a href="#" style="color: {brandText}; text-decoration: none; margin-left: 15px;">Women</a>
          <a href="#" style="color: {brandText}; text-decoration: none; margin-left: 15px;">Men</a>
          <a href="#" style="color: {brandText}; text-decoration: none; margin-left: 15px;">Kids</a>
          <a href="#" style="color: {brandText}; text-decoration: none; margin-left: 15px;">Sale</a>
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section background-color="{brandPrimary}" padding="10px">
      <mj-column>
        <mj-text align="center" color="#ffffff" font-size="13px">
          Free shipping on orders $75+ | Shop Now â†’
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section padding="0">
