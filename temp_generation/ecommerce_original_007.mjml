        <mj-text font-weight="bold" padding-top="15px">Leather Ankle Boots</mj-text>
        <mj-text font-size="14px" color="#666666">Black</mj-text>
        <mj-text font-size="16px" font-weight="bold" color="{brandPrimary}" padding-top="5px">$175.00</mj-text>
        <mj-button href="#" padding-top="15px" width="100%">Add to Cart</mj-button>
      </mj-column>
    </mj-section>
    <mj-section background-color="{brandSecondary}" padding="35px 30px">
      <mj-column>
        <mj-text font-size="20px" font-weight="bold" align="center">
          Complete the Look
        </mj-text>
        <mj-button href="#" padding-top="20px" background-color="{brandPrimary}">
          Shop All New Arrivals
        </mj-button>
      </mj-column>
    </mj-section>
    <mj-section background-color="#333333" padding="30px">
