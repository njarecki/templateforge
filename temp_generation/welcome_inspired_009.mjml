    <mj-style>
      @media only screen and (max-width: 480px) {
        .mobile-hide { display: none !important; }
      }
    </mj-style>
  </mj-head>
  <mj-body background-color="#ffffff" width="640px">
    <mj-section background-color="#ffffff" padding="35px 40px">
