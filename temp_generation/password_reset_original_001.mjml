<mjml>
  <mj-head>
    <mj-title>Reset Your Password</mj-title>
    <mj-attributes>
      <mj-all font-family="{brandFont}, Arial, sans-serif" />
      <mj-text color="{brandText}" line-height="1.6" font-size="16px" />
      <mj-button background-color="{brandPrimary}" color="#ffffff" border-radius="4px" font-weight="600" />
    </mj-attributes>
  </mj-head>
  <mj-body background-color="{brandBG}">
    <!-- Header -->
    <mj-section background-color="#ffffff" padding="25px">
      <mj-column>
        <mj-image src="https://placehold.co/140x45/{brandPrimary}/ffffff?text={brandName}" alt="{brandName}" width="140px" />
      </mj-column>
    </mj-section>

    <!-- Main content -->
    <mj-section background-color="#ffffff" padding="0 25px 40px">
      <mj-column>
        <mj-image src="https://placehold.co/100x100/{brandSecondary}/ffffff?text=ðŸ”" alt="Security" width="100px" padding-bottom="25px" />
        <mj-text font-size="24px" font-weight="700" align="center">
          Password Reset Request
        </mj-text>
        <mj-text font-size="16px" align="center" color="#666666" padding-top="15px">
          We received a request to reset the password for your account associated with {customerEmail}.
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-section background-color="#ffffff" padding="0 25px 35px">
      <mj-column>
        <mj-button href="{resetUrl}" font-size="18px" padding="15px 45px">
          Reset My Password
        </mj-button>
        <mj-text font-size="13px" align="center" color="#888888" padding-top="20px">
          This link will expire in {expiryTime}.
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-section background-color="#ffffff" padding="0 25px">
      <mj-column>
        <mj-divider border-color="#eeeeee" />
      </mj-column>
    </mj-section>

    <mj-section background-color="#ffffff" padding="25px">
      <mj-column>
        <mj-text font-size="14px" color="#666666">
          <strong>If the button doesn't work</strong>, copy and paste this link into your browser:
        </mj-text>
        <mj-text font-size="13px" color="{brandPrimary}" padding-top="10px" word-break="break-all">
          {resetUrl}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Security notice -->
    <mj-section background-color="#fff9e6" padding="25px" border-radius="8px">
      <mj-column>
        <mj-text font-size="14px" color="#7a6a00">
          <strong>Didn't request this?</strong><br/><br/>
          If you didn't request a password reset, you can safely ignore this email. Your password will remain unchanged. If you're concerned about your account security, please <a href="{supportUrl}" style="color: #7a6a00;">contact our support team</a>.
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Tips -->
    <mj-section background-color="#ffffff" padding="30px 25px">
      <mj-column>
        <mj-text font-size="14px" font-weight="600" padding-bottom="10px">
          Password Tips
        </mj-text>
        <mj-text font-size="14px" color="#666666">
          â€¢ Use at least 12 characters<br/>
          â€¢ Include uppercase and lowercase letters<br/>
          â€¢ Add numbers and special characters<br/>
          â€¢ Avoid common words or personal information
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section background-color="#f5f5f5" padding="25px">
      <mj-column>
        <mj-text font-size="12px" color="#888888" align="center">
          This is an automated security email from {brandName}.<br/>
          Please do not reply to this message.
        </mj-text>
        <mj-text font-size="12px" color="#888888" align="center" padding-top="15px">
          {companyAddress}
        </mj-text>
        <mj-text font-size="12px" color="#888888" align="center" padding-top="10px">
          <a href="{helpUrl}" style="color: #888888;">Help Center</a> | <a href="{privacyUrl}" style="color: #888888;">Privacy Policy</a>
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
