        <mj-text font-size="11px" align="center" color="#666666">Locally sourced</mj-text>
      </mj-column>
    </mj-section>
    <mj-section background-color="#2f3542" padding="25px">
      <mj-column>
        <mj-text font-size="14px" align="center" color="#ffffff">
          Download our app for exclusive deals!
        </mj-text>
        <mj-image src="https://placehold.co/280x45/png?text=App+Store+Buttons" alt="Download App" width="200px" align="center" padding-top="15px" />
      </mj-column>
    </mj-section>
    <mj-section background-color="#2f3542" padding="0 25px 25px">
      <mj-column>
        <mj-social font-size="12px" icon-size="22px" mode="horizontal" align="center">
          <mj-social-element name="instagram" href="#" alt="Instagram" />
          <mj-social-element name="facebook" href="#" alt="Facebook" />
          <mj-social-element name="twitter" href="#" alt="Twitter" />
